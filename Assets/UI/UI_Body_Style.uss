#Off-Label
{
	width: 23px;
	height: 19px;
	
	-unity-font: resource("Fonts/Roboto-Regular");
	-unity-font-definition: none;
	-unity-font-style: normal;
	font-size: 16px;
	font-width: 19px;

	color: #FFFFFF;

	flex: none;
	order: 0;
	flex-grow: 0;
}

#On-Label
{
	width: 20px;
	height: 19px;
		
	-unity-font: resource("Fonts/Roboto-Regular");
	-unity-font-definition: none;
	-unity-font-style: normal;
	font-size: 16px;
	font-width: 19px;

	color: #FFFFFF;

	opacity: 0.5;

	flex: none;
	order: 2;
	flex-grow: 0;
}

.unity-toggle__input
{
	width: 64px;
	height: 32px;

	background-color: #4D4D4D;
	border-radius: 20px;

	flex: none;
	order: 1;
	flex-grow: 0;
}

.unity-checkmark
